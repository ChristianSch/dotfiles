# Increase volume 5% with Apple volume up
"/home/heimdall/.config/scripts/volcontrol.sh up"
    m:0x0 + c:123
    XF86AudioRaiseVolume

# Increase volume 5% with F12
"/home/heimdall/.config/scripts/volcontrol.sh up"
    m:0x0 + c:96

# Decrease volume 5% with Apple volume down
"/home/heimdall/.config/scripts/volcontrol.sh down"
    m:0x0 + c:122
    XF86AudioLowerVolume

# Decrease volume 5% with F11
"/home/heimdall/.config/scripts/volcontrol.sh down"
    m:0x0 + c:95

# Mute with Apple mute
"/home/heimdall/.config/scripts/volcontrol.sh mute"
    m:0x0 + c:121
    XF86AudioMute

# Mute with F10
"/home/heimdall/.config/scripts/volcontrol.sh mute"
    m:0x0 + c:76


# Suspend system
"systemctl suspend"
    m:0x0 + Mod4 + c:107
    Mod4 + XF86Eject


# Dim keyboard
"kbdlight down"
    m:0x0 + c:237
    XF86KbdBrightnessUp


# Brighten keyboard
"kbdlight up"
    m:0x0 + c:238
    XF86KbdBrightnessDown

"/home/heimdall/.config/scripts/screencontrol.sh up"
    m:0x0 + c:233
    XF86MonBrightnessUp

"/home/heimdall/.config/scripts/screencontrol.sh down"
    m:0x0 + c:232
    XF86MonBrightnessDown
